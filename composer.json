{
    "name": "cajudev/validator",
    "description": "Uma biblioteca que disponibiliza um conjunto de validações para facilitar a sua vida.",
    "keywords": ["validator", "composer", "php"],
    "license": "MIT",
    "homepage": "https://github.com/cajudev/validator",
    "type": "library",
    "authors": [
        {
            "name": "Richard Lopes",
            "email": "contato.richardlopes@outlook.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
		"php": "^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "php-coveralls/php-coveralls": "^2",
        "cajudev/csvparser": "*"
    },
    "autoload": {
        "psr-4": {
            "Cajudev\\Validator\\": [
                "app/src/",
                "app/tests/"
            ]
        }
    }
